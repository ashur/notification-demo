---
site:
  title: Notification Demo
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{{ title }} | {{ site.title }}</title>

	<meta name="title" content="{{ title }}">

	{%- set criticalStyle -%}
		{% include "css/reset.css" %}
		{% include "css/global.css" %}
		{% include "css/composition.css" %}
		{% include "css/utilities.css" %}
		{% include "css/blocks.css" %}
	{%- endset -%}

	<style>
		{{ criticalStyle | safe }}
	</style>

	{% for resource in prefetch %}
	<link rel="prefetch" href="{{ resource.href }}" as="resource.as">
	{% endfor %}

	{% for script in externalScripts %}
	{% if script.src %}
	<script
		src="{{ script.src }}"
		{% if script.defer %}defer{% endif %}
	></script>
	{% else %}
	<script src="{{ script }}" defer></script>
	{% endif %}
	{% endfor %}
</head>
<body>
	<div class="[ center container stack ][][]">
		<header class="[][ font-sans ][]">
			<a href="/" class="[][ bold no-underline ][]">
				<span role="img" aria-label="Spade">♠️</span>
				{{ site.title }}
			</a>
		</header>

		{{ content | safe }}

		<footer class="[][ font-sans ][ page-footer ]">
			<nav>
				<ul class="[ stack-sm ][][]">
					<li><a href="/apple/">Apple</a></li>
					<li><a href="/banana/">Banana</a></li>
					<li><a href="/carrot/">Carrot</a></li>
				</ul>
			</nav>
		</footer>
	</div>
</body>
</html>
